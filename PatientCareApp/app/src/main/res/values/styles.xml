<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>

    <!-- Cart Layout Styles -->
    <!-- Cart Upper Total  -->
    <style name="cart_upper_total">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd" tools:ignore="NewApi">true</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <!-- Table Layout  -->
    <style name="tbl">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart" tools:ignore="NewApi">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Table Head THs -->
    <style name="tbl_th">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!-- Table TH TR -->
    <style name="tbl_th_tr">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/border</item>
    </style>

    <!-- Table Body TR -->
    <style name="tbody_tr">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Table Rows -->
    <style name="cart_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_weight">3.5</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:maxWidth">60dp</item>
    </style>

    <style name="cart_qty_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
        <item name="android:ems">3</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="cart_total_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <!-- Btn Controls Layout -->
    <style name="btn_controls_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- Btn Controls -->
    <style name="btn_controls">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@mipmap/ic_checkout_ready</item>
        <item name="android:layout_below">@+id/lv_items</item>
        <item name="android:layout_alignLeft">@+id/update_cart</item>
        <item name="android:paddingLeft">80dp</item>
        <item name="android:paddingRight">80dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/ColorPrimary</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!-- Checkout Button -->
    <style name="btn_checkout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@mipmap/ic_checkout_white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/ColorPrimary</item>
        <item name="android:paddingLeft">65dp</item>
        <item name="android:paddingRight">65dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Theme.MyFancyTheme" parent="android:Theme.Holo.Light">
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>
    <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal"/>
</resources>
