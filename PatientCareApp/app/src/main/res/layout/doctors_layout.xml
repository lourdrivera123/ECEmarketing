<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TableRow>

                <LinearLayout
                    android:layout_weight="0.7"
                    android:minHeight="100dp"
                    android:minWidth="100dp">

                    <ImageView
                        android:id="@+id/image_holder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_holder" />
                </LinearLayout>

                <TableLayout>

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.7"
                            android:gravity="end"
                            android:id="@+id/doctor_full"
                            android:text="Lastname, Firstname, MI. PhD" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/specialty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cardiologist" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/sub_specialty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CardioSublogist" />
                    </TableRow>

                    <TableRow android:layout_marginTop="8dp">

                        <ImageButton
                            android:id="@+id/call_doctor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_contact" />
                    </TableRow>
                </TableLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/tbl_doctors_clinic">

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="CLINIC INFORMATION"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/clinic_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="Doctor's Clinic"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/clinic_address_first_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="#86 Acacia St., Cabantian" />
            </TableRow>

            <TableRow android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/clinic_address_second_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Dexter City, Davao del Sur, Philippines, 8000" />
            </TableRow>
        </TableLayout>
    </ScrollView>
</LinearLayout>