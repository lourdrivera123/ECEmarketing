<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <TableLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow>

                <ImageButton
                    android:id="@+id/profile_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@mipmap/profile_tile" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@mipmap/history_tile"
                    android:id="@+id/history_btn" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@mipmap/results_tile"
                    android:id="@+id/test_results_btn" />
            </TableRow>

            <TableRow android:layout_marginTop="@dimen/d10">

                <TextView
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:text="Profile" />

                <TextView
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:text="Patient History" />

                <TextView
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:text="Prescription" />
            </TableRow>

            <TableRow android:layout_marginTop="@dimen/d40">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@mipmap/doctors_tile"
                    android:id="@+id/doctors_btn" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@mipmap/consultation_tile"
                    android:id="@+id/consultation_btn" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@mipmap/product_tile"
                    android:id="@+id/products_btn" />
            </TableRow>

            <TableRow android:layout_marginTop="@dimen/d10">

                <TextView
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:text="Doctors" />

                <TextView
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:text="Consultation" />

                <TextView
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:text="Products" />
            </TableRow>

            <TableRow android:layout_marginTop="@dimen/d40">

                <ImageButton
                    android:id="@+id/cart_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@mipmap/cart_tile" />

                <ImageButton
                    android:id="@+id/promos_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@mipmap/discounts_tile" />

                <ImageButton
                    android:id="@+id/news_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@mipmap/news_tile" />
            </TableRow>

            <TableRow android:layout_marginTop="@dimen/d10">

                <TextView
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:text="Cart" />

                <TextView
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:text="Promos" />

                <TextView
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="News" />
            </TableRow>
        </TableLayout>
    </ScrollView>
</LinearLayout>