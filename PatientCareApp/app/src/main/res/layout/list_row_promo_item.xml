<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/promo_name"
        android:singleLine="false"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
        android:textColor="#000"
        android:text="BACK TO SCHOOL PROMO"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/less"
            android:text="LESS:"
            android:textColor="#000"
            android:shadowRadius="12"
            android:textStyle="bold"
            android:layout_weight="0.2"
            android:textColorHighlight="#000"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/less_amount"
            android:text="75% DISCOUNT"
            android:textColor="#239c70"
            android:layout_weight="0.6"
            android:textStyle="bold"
            android:textColorHighlight="#000"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Starting June 21, 2015 to December 31, 2015"
        android:layout_below="@id/less_amount"
        android:id="@+id/duration"/>

</LinearLayout>