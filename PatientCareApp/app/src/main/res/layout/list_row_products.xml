<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >


    <!-- Promo Div -->
    <TextView
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:text="-100%"
        android:id="@+id/promo"
        android:background="@mipmap/ic_promo"
        android:layout_marginLeft="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"/>

    <!-- Product Name-->
    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Biogesic"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15dip"
        android:textStyle="bold"/>

    <!-- Product Description-->
    <TextView
        android:id="@+id/product_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:textColor="#343434"
        android:textSize="10dip"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="5mg Biogesic description ni diri" />


    <!-- Product Price -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Php 5.35"
        android:id="@+id/product_price"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_alignBottom="@+id/product_description"
        android:layout_alignTop="@+id/product_name"
        android:textColor="#10bcc9"
        android:selectAllOnFocus="@mipmap/ic_minus_dead"
        android:layout_alignParentRight="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/product_description"
        android:id="@+id/div"
        android:layout_marginTop="20dp"
        android:background="#ff13451d"/>

    <!-- Add & Minus buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/div">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minus_qty"
            android:background="@mipmap/ic_minus"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/packaging_quantity"
            android:text="1000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_qty"
            android:background="@mipmap/ic_plus"/>
    </LinearLayout>

    <!--  Add to cart button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/div"
        android:layout_alignParentRight="true"
        android:background="@color/ColorPrimary"
        android:layout_marginTop="8dp"
        android:textColor="#fff"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="12sp"
        android:text="ADD TO CART"/>

</RelativeLayout>