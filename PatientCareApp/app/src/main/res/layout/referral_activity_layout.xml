<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/d10"
    android:layout_marginLeft="@dimen/d10"
    android:layout_marginRight="@dimen/d10"
    android:layout_marginTop="@dimen/d10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".9"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How did you hear about us?" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d20">

            <RadioButton
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Others" />

            <EditText
                android:id="@+id/specifyOthers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d10"
                android:hint="Please specify"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radioReferredBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d10"
                android:text="Referred by a friend" />
        </RadioGroup>

        <EditText
            android:id="@+id/referredBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Firstname Lastname (Referral ID)"
            android:inputType="textMultiLine"
            android:lines="1"
            android:maxLines="1"
            android:minLines="1"
            android:textSize="12sp"
            android:visibility="invisible" />

        <ListView
            android:id="@+id/listOfNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/d10"
        android:layout_weight=".1"
        android:gravity="bottom">

        <Button
            android:id="@+id/continueBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            android:text="Continue"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>