<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/d10">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address Information" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_marginBottom="15dp"
                android:background="@color/LightGreen" />

            <Spinner
                android:id="@+id/address_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <Spinner
                android:id="@+id/address_province"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/address_city_municipality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/address_barangay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/optional_address_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unit#/Building#/Lot#/Block#/Phase#/House#"
                android:paddingTop="5dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/address_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Street"
                android:paddingTop="5dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Contact Information" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_marginBottom="15dp"
                android:background="@color/LightGreen" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/tel_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telephone Number"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/cell_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cellphone Number"
                android:inputType="number"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>