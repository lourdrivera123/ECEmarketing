<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zem.patientcareapp">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".AccountActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".ContactActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".PatientHomeActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".DoctorActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".PatientProfileActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".PatientHistoryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".HomeTileActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".MasterTabActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".EditTabsActivity"
            android:theme="@android:style/Theme.Holo.Light"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <activity android:name=".FileCache" />
        <activity android:name=".Utils" />
        <activity android:name=".MemoryCache" />
        <activity android:name=".LazyAdapter" />
        <activity android:name=".ImageLoader" />
        <activity android:name=".Doctor" />
        <activity android:name=".Patient" />
        <activity android:name=".ProductsActivity" />

    </application>

</manifest>
